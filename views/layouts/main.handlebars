        <h1 class="title">Mood booster</h1>
        <div class="container">
          <div class="joke">
            <p></p>
          </div>
          <button>Get a Dad Joke</button>
        </div>
        <script src="/js/script.js"></script>
      </section>

</div>

<!--View Timeline-->
<div class="tabcontent" id="View-Timeline">
    <h3>Your mood through the week</h3>
    

    <canvas id="myChart" width="900" height="700"></canvas>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>

    <script src="/js/charting.js"></script>
 
</div>


